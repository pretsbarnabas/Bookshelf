{
  "compilerOptions": {
    "target": "es2016",                        
    "moduleDetection": "force",                
    "module": "commonjs",                      
    "outDir": "./dist",                        
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,  
    "strict": true,             
    "skipLibCheck": true,       
    "rootDir": "./src"
  },
  "include": ["src/**/*"],      
  "exclude": ["node_modules"]   
}
