{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "dev": "ng serve",
    "build": "ng build",
    "build:client": "ng build --output-path dist/frontend/browser --output-hashing none",
    "build:server": "ng run frontend:server --output-path=dist/frontend/server --verbose --no-delete-output-path",
    "verify:build": "node -e \"require('fs').accessSync('dist/frontend/browser/index.html')\"",
    "build:ssr": "npm run clean && npm run build:client && npm run verify:build && npm run build:server",
    "clean": "rimraf dist .angular",
    "test": "ng test",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.1",
    "@angular/cdk": "^19.2.2",
    "@angular/common": "^19.2.1",
    "@angular/compiler": "^19.2.1",
    "@angular/core": "^19.2.1",
    "@angular/flex-layout": "^15.0.0-beta.42",
    "@angular/forms": "^19.1.3",
    "@angular/material": "^19.1.5",
    "@angular/platform-browser": "^19.1.3",
    "@angular/platform-browser-dynamic": "^19.1.3",
    "@angular/platform-server": "^19.2.1",
    "@angular/router": "^19.2.1",
    "@angular/ssr": "^19.2.1",
    "@dicebear/collection": "^9.2.2",
    "@dicebear/core": "^9.2.2",
    "@ngx-formly/core": "^6.3.12",
    "@ngx-formly/material": "^6.3.12",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "bootstrap": "^5.3.3",
    "express": "^4.18.2",
    "jwt-decode": "^4.0.0",
    "ngx-spinner": "^17.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.1",
    "@angular/cli": "^19.2.1",
    "@angular/compiler-cli": "^19.2.1",
    "@ngx-formly/schematics": "^6.3.12",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
